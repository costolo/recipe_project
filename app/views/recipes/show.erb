<div id="recipe">
	<h1><%=@recipe.name%></h1>
	<h3> ingredients </h3>
	<% @recipe.ingredients_array.each do |ingredient| %>
		<%= ingredient %><br>
	<% end %>
	<h3>instructions</h3>
	<%= @recipe.instructions %><br>
	<br>
	By: <a href='/users/<%= @recipe.user_id %>'><%= @recipe.user.name %></a>
	<% if current_user && current_user.id == @recipe.user.id %>
		|<a href='/recipes/<%= @recipe.id %>/edit'> edit</a>
	<% end %>
</div>

<% if current_user %>
	<%= erb :'/votes/_vote' %>
	<%= erb :'/comments/_comment' %>
	<%= erb :'/comments/_comment_form' %>
<% end %>
