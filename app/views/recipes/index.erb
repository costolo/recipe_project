<header>
  <% if current_user %>
    <a href="/signout">sign out</a>
  <% else %>
    <a href="/signin">sign in</a> | <a href="/signup">sign up</a>
  <% end %>
</header>
<h1 id="rec-ind">recipe index</h1>
<div class="row">
	<div class="col-md-2">	
		<% @recipes.each do |recipe| %>
			<a href="/recipes/<%= recipe.id %>" class="recipe_link"><%= recipe.name %></a><br>
		<% end %>
	</div>

	<div class="col-md-6">
	</div>

	<div class="comment">
	</div>
</div>




